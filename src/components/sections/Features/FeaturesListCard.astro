---
export interface Props {
  featureNumber: string;
  icon: {
    src: string;
    alt?: string;
  };
  title: string;
  text: string;
  buttonText: string;
  customClass: string;
}

const { featureNumber, icon, title, text, buttonText, customClass } =
  Astro.props;
---

<li class:list={["feature-card", customClass]}>
  <div class="feature-card__wrapper">
    <h2 class="feature-card__number">{featureNumber}</h2>
    <img
      class="feature-card__icon"
      height="80"
      width="80"
      loading="lazy"
      src={icon.src}
      alt={icon.alt ?? ""}
    />
    <h3 class="feature-card__title">{title}</h3>
    <p class="feature-card__text">{text}</p>
    <a href="#testimonials" class="feature__button-more-details button"
      >{buttonText}</a
    >
  </div>
</li>

<style lang="scss">
  .feature-card {
    width: 100%;
    height: 100%;
    box-shadow: 0 0 10px rgb(0 0 0 / 10%);

    .feature-card__wrapper {
      position: relative;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 60px 30px;
      border-radius: 5px;

      .feature-card__number {
        position: absolute;
        top: 15px;
        left: 30px;
        z-index: -1;
        font-size: 100px;
        color: #fdefe9;
      }

      .feature-card__icon {
        margin-bottom: 40px;
      }

      .feature-card__title {
        margin-bottom: 25px;
        font-weight: 500;
        line-height: 1.2;
      }

      .feature-card__text {
        margin-bottom: 35px;
        color: #888;
        text-align: center;
        letter-spacing: initial;
      }
    }
  }

  @include breakpoints.md {
    .feature-card {
      width: calc(50% - 15px);
    }
  }

  @include breakpoints.lg {
    .feature-card {
      width: 33.3333%;
    }
  }
</style>
