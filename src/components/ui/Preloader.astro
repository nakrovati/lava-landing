<div id="preloader">
  <div class="jumper">
    <div></div>
    <div></div>
    <div></div>
  </div>
</div>

<style lang="scss">
  #preloader {
    position: fixed;
    inset: 0;
    z-index: 9999;
    overflow: hidden;
    color: #fff;
    background-image: linear-gradient(145deg, #f4813f 0%, #f1556a 100%);
    transition: opacity 0.6s ease;
  }

  #preloader .jumper {
    position: absolute;
    inset: 0;
    display: block;
    width: 50px;
    height: 50px;
    margin: auto;
  }

  #preloader .jumper > div {
    position: absolute;
    width: 10px;
    width: 50px;
    height: 10px;
    height: 50px;
    background-color: #fff;
    border-radius: 100%;
    opacity: 0;
    animation: jumper 1s 0s linear infinite;
    animation-fill-mode: both;
  }

  #preloader .jumper > div:nth-child(2) {
    animation-delay: 0.3333s;
  }

  #preloader .jumper > div:nth-child(3) {
    animation-delay: 0.6666s;
  }

  @keyframes jumper {
    0% {
      opacity: 0;
      transform: scale(0);
    }

    5% {
      opacity: 1;
    }

    100% {
      opacity: 0;
      transform: scale(1);
    }
  }

  @keyframes jumper {
    0% {
      opacity: 0;
      transform: scale(0);
    }

    5% {
      opacity: 1;
    }

    100% {
      opacity: 0;
    }
  }
</style>

<script>
  const preloader = document.querySelector("#preloader");

  if (preloader instanceof HTMLDivElement) {
    preloader.style.willChange = "opacity";

    window.addEventListener(
      "DOMContentLoaded",
      () => {
        preloader.style.opacity = "0";

        setTimeout(() => {
          preloader.style.display = "none";
        }, 600);
      },
      { once: true }
    );
  }
</script>
